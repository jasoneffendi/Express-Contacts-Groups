<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title%></title>
    </head>

    <body>
        <h1>Halaman Groups</h1>
        <a href="/">Back to Home</a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name of the Group</th>
                    <th>Group Members
                </tr>
            </thead>
            <tbody>
                <% data.forEach( row => { %>
                <tr>
                    <td><%=row.id%></td>
                    <td><%=row.name_of_group%></td>
                    <td><%=row.members%></td>
                    <td>
                        <a href="/groups/edit/<%=row.id%>">Edit</a>
                        <a href="/groups/delete/<%=row.id%>">Delete</a>
                        <a href="/groups/assign/<%=row.id%>">Assign</a>
                    </td>
                </tr>
                <% })%>
            </tbody>
        </table>
        <form class="" action="/groups" method="POST">
            <input type="text" name="name_of_group" placeholder="Name of the Group">
            <input type="submit" value="SUBMIT">
        </form>
    </body>
</html>