<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title%></title>
    </head>

    <body>
        <h1>Halaman Profile</h1>
        <a href="/">Back to Home</a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach( row => { %>
                <tr>
                    <td><%=row.id%></td>
                    <td><%=row.username%></td>
                    <td><%=row.password%></td>
                    <td>
                        <a href="/profile/edit/<%=row.id%>">Edit</a>
                        <a href="/profile/delete/<%=row.id%>">Delete</a>
                    </td>
                </tr>
                <% })%>
            </tbody>
        </table>
        <form class="" action="/profile" method="POST">
            <input type="text" name="username" placeholder="Username">
            <input type="text" name="password" placeholder="Password">
            <input type="submit" value="SUBMIT">
        </form>
    </body>
</html>