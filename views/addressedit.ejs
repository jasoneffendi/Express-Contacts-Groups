<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title%></title>
    </head>

    <body>
        <thead>
            <tr>
                <th>ID</th>
                <th>Street</th>
                <th>City</th>
                <th>Zipcode</th>
            </tr>
        </thead>
        <form class="" action="/addresses/edit/<%=data[0].id%>" method="POST">
            <input type="text" name="street" placeholder="Street" value="<%=data[0].street%>">
            <input type="text" name="city" placeholder="City" value="<%=data[0].city%>">
            <input type="text" name="zipcode" placeholder="Zipcode" value="<%=data[0].zipcode%>">
            <input type="submit" value="SUBMIT">
        </form>
    </body>
</html>