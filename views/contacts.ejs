<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title%></title>
    </head>

    <body>
        <h1>Halaman Contact</h1>
        <a href="/">Back to Home</a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach( row => { %>
                <tr>
                    <td><%=row.id%></td>
                    <td><%=row.name%></td>
                    <td><%=row.company%></td>
                    <td><%=row.telp%></td>
                    <td><%=row.email%></td>
                    <td>
                        <a href="/contacts/edit/<%=row.id%>">Edit</a>
                        <a href="/contacts/delete/<%=row.id%>">Delete</a>
                    </td>
                </tr>
                <% })%>
            </tbody>
        </table>
        <form class="" action="/contacts" method="POST">
            <input type="text" name="name" placeholder="Name">
            <input type="text" name="company" placeholder="Company">
            <input type="text" name="telp" placeholder="Telephone">
            <input type="text" name="email" placeholder="Email">
            <input type="submit" value="SUBMIT">
        </form>
    </body>
</html>