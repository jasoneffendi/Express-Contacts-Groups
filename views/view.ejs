<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title%></title>
    </head>

    <body>
        <h1>Halaman Addresses</h1>
        <a href="/">Back to Home</a>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>Zipcode</th>
                    <th>Contact ID</th>
                    <th>Contact Name</th>
                    <th>Company Name</th>
                </tr>
            </thead>
            <tbody>
                <% if (data) {data.forEach( row => { %>
                <tr>
                    <td><%=row.id%></td>
                    <td><%=row.street%></td>
                    <td><%=row.city%></td>
                    <td><%=row.zipcode%></td>
                    <td><%=row.id%></td>
                    <td><%=row.name%></td>
                    <td><%=row.company%></td>
                    <td>
                        <a href="/addresses/edit/<%=row.id%>">Edit</a>
                        <a href="/addresses/delete/<%=row.id%>">Delete</a>
                    </td>
                </tr>
                <% })}%>
            </tbody>
        </table>
    </body>
</html>